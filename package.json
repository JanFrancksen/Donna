{
	"name": "donna",
	"private": true,
	"workspaces": ["apps/*", "packages/*", "tooling/*"],
	"packageManager": "bun@1.1.29",
	"scripts": {
		"build": "turbo build",
		"clean": "git clean -xdf node_modules",
		"clean:workspaces": "turbo clean",
		"db:push": "turbo -F @repo/db push",
		"db:studio": "turbo -F @repo/db studio",
		"dev": "turbo dev --parallel",
		"dev:web": "turbo dev --filter=@repo/web",
		"dev:app": "turbo dev --filter=@repo/app",
		"start:web": "turbo start --filter=@repo/web",
		"start:app": "turbo start --filter=@repo/app",
		"test": "turbo test --parallel",
		"lint": "bunx biome lint --write *",
		"lint:repo": "bunx sherif@latest",
		"lint:repo:fix": "bunx sherif@latest lint --fix",
		"format": "bunx biome format --write *",
		"postinstall": "lefthook install",
		"typecheck": "turbo typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.2",
		"@t3-oss/env-nextjs": "^0.11.1",
		"@commitlint/cli": "^19.5.0",
		"@commitlint/config-conventional": "^19.5.0",
		"lefthook": "^1.7.16",
		"@turbo/gen": "^2.1.2",
		"turbo": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.6.2"
	}
}
